{% extends 'base.html.twig' %}
{% block title %}Article - {{ article.id }}{% endblock %}
{% block content %}
        <div class="flex justify-center">
            <div class="max-w-4xl px-10 my-4 py-6 bg-white rounded-lg shadow-md">

                    <div class="flex justify-center">
                            <img class="mx-4 w-50 h-50 object-cover hidden sm:block" src="https://placehold.co/400" alt="avatar">

                    </div>

                <div class="mt-2">
                    <a class="text-2xl text-gray-700 font-bold hover:text-gray-600" href="#">{{ article.title }}</a>
                    <p class="mt-2 text-gray-600">{{ article.body }}</p>
                </div>

            </div>
        </div>
    {% for comment in comments %}
        <div class="flex justify-center relative top-1/3">
    <div class="relative grid grid-cols-1 gap-4 p-4 mb-8 border rounded-lg bg-white shadow-lg">
        <div class="relative flex gap-4">
            <img src="https://placehold.co/50" class="relative rounded-lg -top-8 -mb-4 bg-white border h-20 w-20" alt="" loading="lazy">
            <div class="flex flex-col w-full">
                <div class="flex flex-row justify-between">
                    <p class="relative text-xl whitespace-nowrap truncate overflow-hidden">{{ comment.name|capitalize }}</p>
                    <a class="text-gray-500 text-xl" href="#"><i class="fa-solid fa-trash"></i></a>
                </div>
                <p class="text-gray-400 text-sm">{{ comment.email }}</p>
            </div>
        </div>
        <p class="-mt-4 text-gray-500">{{ comment.body }}</p>
    </div>
        </div>
    {% endfor %}
{% endblock %}